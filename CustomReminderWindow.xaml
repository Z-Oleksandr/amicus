<Window x:Class="AMICUS.CustomReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create Reminder"
        Width="400"
        Height="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Cozy Button Style -->
        <Style x:Key="CozyButton" TargetType="Button">
            <Setter Property="Background" Value="#FF8B6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFA080"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="CozyTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="#FFF8F0"
            CornerRadius="12"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Create Reminder"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#5D4037"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Message Input -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Reminder message:"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#5D4037"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="MessageTextBox"
                         Style="{StaticResource CozyTextBox}"
                         MaxLength="69"
                         TextWrapping="Wrap"
                         AcceptsReturn="False"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"
                         TextChanged="MessageTextBox_TextChanged"/>
                <TextBlock x:Name="CharCountText"
                           Text="0/69"
                           FontSize="10"
                           Foreground="#8D6E63"
                           HorizontalAlignment="Right"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Date Input -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock Text="Date:"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#5D4037"
                           Margin="0,0,0,5"/>
                <DatePicker x:Name="ReminderDatePicker"
                            SelectedDateChanged="DateOrTime_Changed"/>
            </StackPanel>

            <!-- Time Input -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <TextBlock Text="Time:"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#5D4037"
                           Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="HourTextBox"
                             Style="{StaticResource CozyTextBox}"
                             Width="50"
                             MaxLength="2"
                             TextAlignment="Center"
                             TextChanged="DateOrTime_Changed"/>
                    <TextBlock Text=":"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#5D4037"
                               VerticalAlignment="Center"
                               Margin="5,0"/>
                    <TextBox x:Name="MinuteTextBox"
                             Style="{StaticResource CozyTextBox}"
                             Width="50"
                             MaxLength="2"
                             TextAlignment="Center"
                             TextChanged="DateOrTime_Changed"/>
                    <TextBlock Text="(24h format)"
                               FontSize="10"
                               Foreground="#8D6E63"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button x:Name="SaveButton"
                        Content="Save"
                        Style="{StaticResource CozyButton}"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        IsEnabled="False"/>
                <Button Content="Cancel"
                        Style="{StaticResource CancelButton}"
                        Width="80"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

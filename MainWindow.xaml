<Window x:Class="AMICUS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMICUS"
        mc:Ignorable="d"
        Title="Amicus"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Rounded Progress Bar Style -->
        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <!-- Background -->
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="3.75"
                                    BorderThickness="0"/>
                            <!-- Foreground (Progress) -->
                            <Border x:Name="PART_Track"
                                    CornerRadius="3.75"
                                    BorderThickness="0">
                                <Grid>
                                    <Border x:Name="PART_Indicator"
                                            Background="{TemplateBinding Foreground}"
                                            CornerRadius="3.75"
                                            HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close House Button Style with Rounded Hover -->
        <Style x:Key="RoundedHoverButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="HoverBorder"
                                    Background="Transparent"
                                    CornerRadius="6"
                                    Padding="2">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverBorder" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainCanvas" Background="Transparent">
        <!-- House Room Panel (Bottom-right corner) -->
        <StackPanel x:Name="HousePanel"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,60"
                    Visibility="Collapsed"
                    Background="Transparent">

            <!-- Needs Indicators (above room) -->
            <Border Background="#4DCCCCCC"
                    CornerRadius="8"
                    Padding="8,0,0,8"
                    Margin="0,0,0,5">
                <StackPanel x:Name="NeedsPanel"
                            Width="216"
                            Background="Transparent">

                <!-- Hunger -->
                <StackPanel Margin="0,0,0,3" HorizontalAlignment="Left">
                    <TextBlock x:Name="HungerLabel"
                               Text="Hunger"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,1"
                               HorizontalAlignment="Left">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="1" Direction="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <ProgressBar x:Name="HungerBar"
                                 Width="174"
                                 Height="7.5"
                                 Value="75"
                                 Minimum="0"
                                 Maximum="100"
                                 Background="#40FFFFFF"
                                 Foreground="#FFB5E3"
                                 BorderThickness="0"
                                 Style="{StaticResource RoundedProgressBar}"/>
                </StackPanel>

                <!-- Cleanliness -->
                <StackPanel Margin="0,0,0,3" HorizontalAlignment="Left">
                    <TextBlock x:Name="CleanlinessLabel"
                               Text="Cleanliness"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,1"
                               HorizontalAlignment="Left">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="1" Direction="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <ProgressBar x:Name="CleanlinessBar"
                                 Width="174"
                                 Height="7.5"
                                 Value="50"
                                 Minimum="0"
                                 Maximum="100"
                                 Background="#40FFFFFF"
                                 Foreground="#B5E3FF"
                                 BorderThickness="0"
                                 Style="{StaticResource RoundedProgressBar}"/>
                </StackPanel>

                <!-- Happiness -->
                <StackPanel Margin="0,0,0,3" HorizontalAlignment="Left">
                    <TextBlock x:Name="HappinessLabel"
                               Text="Happiness"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,1"
                               HorizontalAlignment="Left">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="1" Direction="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <ProgressBar x:Name="HappinessBar"
                                 Width="174"
                                 Height="7.5"
                                 Value="90"
                                 Minimum="0"
                                 Maximum="100"
                                 Background="#40FFFFFF"
                                 Foreground="#FFE5B5"
                                 BorderThickness="0"
                                 Style="{StaticResource RoundedProgressBar}"/>
                </StackPanel>
            </StackPanel>
            </Border>

            <!-- Room Container with Close Button -->
            <Grid Width="232" Height="232" Margin="0,-5,0,0">
                <!-- Room Display -->
                <Image x:Name="RoomImage"
                       Width="232"
                       Height="232"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Stretch="Uniform"/>

                <!-- Decorations Canvas (overlays room) -->
                <Canvas x:Name="DecorationsCanvas"
                        Width="232"
                        Height="232"
                        Background="Transparent"/>

                <!-- Close Button (positioned at top-right corner) -->
                <Button x:Name="CloseHouseButton"
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-82,0,0"
                        Click="CloseHouseButton_Click"
                        Cursor="Hand"
                        Style="{StaticResource RoundedHoverButton}">
                    <Image x:Name="CloseHouseArrow"
                           Width="32"
                           Height="32"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Stretch="Uniform"/>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Toggle House Button (Bottom-right corner) -->
        <Button x:Name="ToggleHouseButton"
                Content="🏠"
                Width="50"
                Height="50"
                Background="#4A90E2"
                BorderThickness="0"
                FontSize="24"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,60"
                Click="ToggleHouseButton_Click"
                Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </Button.Effect>
        </Button>

        <!-- Pet will be rendered here (on top of everything else) -->
        <Canvas x:Name="PetCanvas">
            <Image x:Name="PetImage"
                   Width="91"
                   Height="91"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   MouseLeftButtonDown="PetImage_MouseLeftButtonDown"
                   MouseLeftButtonUp="PetImage_MouseLeftButtonUp"
                   MouseMove="PetImage_MouseMove"
                   Cursor="Hand"/>
        </Canvas>
    </Grid>
</Window>
